# BookaMOT SaaS - Environment Configuration for Coolify Deployment
# Copy this file to .env and fill in your production values
# Variables marked with [REQUIRED] must be set before deployment
# Variables marked with [OPTIONAL] can be left empty if not needed

# ============================================================================
# REQUIRED VARIABLES - Deployment will fail if these are not set
# ============================================================================

# Environment Mode
NODE_ENV=production

# Domain Configuration [REQUIRED]
# The domain where your application will be accessible
DOMAIN=your-domain.com

# Database Configuration [REQUIRED]
# Use strong passwords (minimum 16 characters with mixed case, numbers, symbols)
DB_USER=bookamot
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD_MIN_16_CHARS
DB_NAME=bookamot

# NextAuth Configuration [REQUIRED]
# Generate NEXTAUTH_SECRET with: openssl rand -base64 32
NEXTAUTH_SECRET=CHANGE_ME_GENERATE_WITH_openssl_rand_base64_32
NEXTAUTH_URL=https://your-domain.com

# ============================================================================
# OPTIONAL VARIABLES - Payment Processing (Stripe)
# ============================================================================

# Stripe Configuration [OPTIONAL]
# Get these from your Stripe Dashboard: https://dashboard.stripe.com
STRIPE_SECRET_KEY=sk_live_YOUR_STRIPE_SECRET_KEY
STRIPE_WEBHOOK_SECRET=whsec_YOUR_STRIPE_WEBHOOK_SECRET
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_YOUR_STRIPE_PUBLISHABLE_KEY

# ============================================================================
# OPTIONAL VARIABLES - MOT Verification (DVSA API)
# ============================================================================

# DVSA MOT API Configuration [OPTIONAL]
# Get these from DVSA: https://www.dvsa.gov.uk/
DVSA_CLIENT_ID=YOUR_DVSA_CLIENT_ID
DVSA_CLIENT_SECRET=YOUR_DVSA_CLIENT_SECRET
DVSA_API_KEY=YOUR_DVSA_API_KEY
DVSA_SCOPE=https://tapi.dvsa.gov.uk/.default
DVSA_TOKEN_URL=https://login.microsoftonline.com/YOUR_TENANT_ID/oauth2/v2.0/token
DVSA_API_BASE_URL=https://beta.check-mot.service.gov.uk/trade/vehicles/mot-tests

# ============================================================================
# OPTIONAL VARIABLES - Email Configuration (SMTP)
# ============================================================================

# Email Configuration [OPTIONAL]
# Used for password resets and notifications
# Gmail example: smtp.gmail.com:587 with app-specific password
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
SMTP_FROM=noreply@your-domain.com

# ============================================================================
# OPTIONAL VARIABLES - Cloudflare Integration
# ============================================================================

# Cloudflare Configuration [OPTIONAL]
# Enable if your VPS is behind Cloudflare proxy/CDN
CLOUDFLARE_ENABLED=false
# Cloudflare IP ranges (automatically updated, see CLOUDFLARE_INTEGRATION.md)
CLOUDFLARE_TRUSTED_IPS=173.245.48.0/20,103.21.244.0/22,103.22.200.0/22,103.31.4.0/22,141.101.64.0/18,108.162.192.0/18,190.93.240.0/20,188.114.96.0/20,197.234.240.0/22,198.41.128.0/17,162.158.0.0/15,104.16.0.0/13,104.24.0.0/14,172.64.0.0/13,131.0.72.0/22

# ============================================================================
# OPTIONAL VARIABLES - Monitoring & Analytics
# ============================================================================

# Prometheus Metrics [OPTIONAL]
# Enable if you have Prometheus/Grafana running on your VPS
PROMETHEUS_ENABLED=false
PROMETHEUS_SCRAPE_INTERVAL=15s

# Sentry Error Tracking [OPTIONAL]
# Get your DSN from: https://sentry.io/
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Google Analytics [OPTIONAL]
# NEXT_PUBLIC_GA_ID=UA-XXXXXXXXX-X